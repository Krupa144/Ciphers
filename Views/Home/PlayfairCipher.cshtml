@{
    ViewData["Title"] = "Playfair Cipher";
}

<div class="container mt-5">
    <h1 class="text-center">Playfair Cipher</h1>
    <p class="text-center lead">Enter text and a key to encrypt or decrypt using the Playfair cipher.</p>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" action="/Home/EncryptPlayfair">
                <div class="mb-3">
                    <label for="inputText" class="form-label">Text to encrypt:</label>
                    <textarea class="form-control" id="inputText" name="inputText" rows="4" placeholder="Enter your text..." required></textarea>
                </div>
                <div class="mb-3">
                    <label for="key" class="form-label">Encryption Key:</label>
                    <input type="text" class="form-control" id="key" name="key" placeholder="Enter the key..." required />
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Encrypt <i class="bi bi-lock-fill"></i></button>
                </div>
            </form>


            @if (ViewBag.EncryptedText != null)
            {
                <div class="alert alert-success mt-4">
                    <strong>Encrypted Text:</strong> @ViewBag.EncryptedText
                </div>
            }
        </div>
    </div>
</div>
