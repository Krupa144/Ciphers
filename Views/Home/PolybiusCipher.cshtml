@{
    ViewData["Title"] = "Polybius Cipher";
}

<div class="content container text-center">
    <h1 class="text-white">Polybius Cipher</h1>
    <p class="text-muted">Encrypt and decrypt text using the Polybius Cipher method.</p>
    <div class="card bg-dark text-white p-4">
        <form asp-action="EncryptPolybius" method="post" class="mb-4">
            <div class="form-group">
                <label for="inputText">Text to Encrypt</label>
                <textarea class="form-control bg-secondary text-white" id="inputText" name="inputText" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Encrypt</button>
        </form>

        <form asp-action="DecryptPolybius" method="post">
            <div class="form-group">
                <label for="inputTextDecrypt">Text to Decrypt</label>
                <textarea class="form-control bg-secondary text-white" id="inputTextDecrypt" name="inputTextDecrypt" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Decrypt</button>
        </form>

        @if (ViewBag.EncryptedText != null)
        {
            <div class="alert alert-success mt-3">
                <strong>Encrypted Text:</strong> @ViewBag.EncryptedText
            </div>
        }

        @if (ViewBag.DecryptedText != null)
        {
            <div class="alert alert-info mt-3">
                <strong>Decrypted Text:</strong> @ViewBag.DecryptedText
            </div>
        }

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-warning mt-3">
                @ViewBag.Message
            </div>
        }
    </div>
</div>